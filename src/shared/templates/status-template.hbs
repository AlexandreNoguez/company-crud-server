<html lang='pt-BR'>
  <head>
    <title>API Status</title>
    <style>
      body {
        font-family: sans-serif;
        text-align: center;
        margin-top: 40px;
      }
      .status {
        font-size: 1.5rem;
      }
      .up {
        color: green;
        font-weight: bold;
      }
      .down {
        color: red;
        font-weight: bold;
      }
      .box {
        margin-top: 2rem;
        display: inline-block;
        background-color: #c3d8c1;
        width: 20rem;
        border: 1px solid #ccc;
        padding: 1.5rem;
        border-radius: 8px;
      }
    </style>
  </head>
  <body>
    <h1>Health Check</h1>
    <div class='box'>
      <div class='status'>
        <span class='up'>
          💽 API: UP
        </span>
      </div>
      <div class='status'>
        <span class='{{statusClass}}'>
          🗄️ DB:
          {{dbStatus}}
        </span>
      </div>
      <div style='margin-top:1rem;'>📦 Versão:
        <strong>{{apiVersion}}</strong></div>
    </div>
  </body>
</html>
