{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [
      {
        "include": "shared/templates/**/*.hbs",
        "outDir": "dist/src"
      },
      {
        "include": "/public/*.png",
        "outDir": "dist/public"
      }
    ],
    "watchAssets": true
  }
}
